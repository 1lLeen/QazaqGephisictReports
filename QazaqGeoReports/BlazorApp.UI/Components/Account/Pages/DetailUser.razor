@page "/User/Details/{Id}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@attribute [Authorize]

@inject UserManager<QazaqGeoReports.Domain.Entities.User> UserManager
@inject AuthenticationStateProvider Auth
@inject NavigationManager Nav

<PageTitle>Профиль пользователя</PageTitle>

@if (isLoading)
{
    <div class="d-flex justify-content-center py-5">
        <div class="spinner-border" role="status" aria-hidden="true"></div>
        <span class="ms-3">Загружаем профиль…</span>
    </div>
}
else if (user is null)
{
    <div class="alert alert-warning mt-4">
        Пользователь с ID <strong>@Id</strong> не найден.
    </div>
    <button class="btn btn-outline-secondary" @onclick="GoBack">Назад</button>
}
else
{
    <div class="container py-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <img src="@AvatarSrc" alt="avatar"
                         class="rounded-circle shadow-sm border"
                         style="width:96px;height:96px;object-fit:cover;" />
                    <div class="flex-grow-1">
                        <h3 class="mb-1">
                            @DisplayName(user)
                            @if (roles?.Any() == true)
                            {
                                <span class="ms-2">
                                    @foreach (var r in roles!)
                                    {
                                        <span class="badge me-1 @RoleBadge(r)">@r</span>
                                    }
                                </span>
                            }
                        </h3>
                        <div class="text-muted">
                            <i class="bi bi-person me-1"></i> @user.UserName
                            <span class="ms-3"><i class="bi bi-envelope me-1"></i> @user.Email</span>
                            @if (!string.IsNullOrWhiteSpace(user.PhoneNumber))
                            {
                                <span class="ms-3"><i class="bi bi-telephone me-1"></i> @user.PhoneNumber</span>
                            }
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="row g-4">
                    <div class="col-md-6">
                        <h5 class="mb-3">Основное</h5>
                        <dl class="row mb-0">
                            <dt class="col-5 col-sm-4">Фамилия</dt>
                            <dd class="col-7 col-sm-8">@user.LastName</dd>

                            <dt class="col-5 col-sm-4">Имя</dt>
                            <dd class="col-7 col-sm-8">@user.FirstName</dd>

                            @if (!string.IsNullOrWhiteSpace(user.MiddleName))
                            {
                                <dt class="col-5 col-sm-4">Отчество</dt>
                                <dd class="col-7 col-sm-8">@user.MiddleName</dd>
                            }

                            <dt class="col-5 col-sm-4">Полное имя</dt>
                            <dd class="col-7 col-sm-8">@user.FullName</dd>
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <h5 class="mb-3">Статусы</h5>
                        <dl class="row mb-0">
                            <dt class="col-5 col-sm-4">Email</dt>
                            <dd class="col-7 col-sm-8">
                                @user.Email
                                @if (user.EmailConfirmed)
                                {
                                    <span class="badge bg-success ms-2">подтверждён</span>
                                }
                                else
                                {

                                    <span class="badge bg-secondary ms-2">не подтверждён</span>
                                }
                            </dd>

                            <dt class="col-5 col-sm-4">Телефон</dt>
                            <dd class="col-7 col-sm-8">
                                @(user.PhoneNumber ?? "—")
                                @if (user.PhoneNumberConfirmed)
                                {
                                    <span class="badge bg-success ms-2">подтверждён</span>
                                }
                                else
                                {

                                    <span class="badge bg-secondary ms-2">не подтверждён</span>
                                }
                            </dd>

                            <dt class="col-5 col-sm-4">Заблокирован</dt>
                            <dd class="col-7 col-sm-8">
                                @if (user.LockoutEnd is not null && user.LockoutEnd > DateTimeOffset.UtcNow)
                                {
                                    <span class="badge bg-danger">до @FormatDate(user.LockoutEnd.Value.UtcDateTime)</span>
                                }
                                else
                                {

                                    <span class="badge bg-success">нет</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="row g-4 mt-1">
                    <div class="col-md-6">
                        <h5 class="mb-3">Системное</h5>
                        <dl class="row mb-0">
                            <dt class="col-5 col-sm-4">ID</dt>
                            <dd class="col-7 col-sm-8">@user.Id</dd>

                            <dt class="col-5 col-sm-4">Создан</dt>
                            <dd class="col-7 col-sm-8">@FormatDateSafe(user.CreatedTime)</dd>

                            <dt class="col-5 col-sm-4">Обновлён</dt>
                            <dd class="col-7 col-sm-8">@FormatDateSafe(user.UpdatedTime)</dd>

                            @* <dt class="col-5 col-sm-4">Двухфакторка</dt>
                            <dd class="col-7 col-sm-8">
                                @if (user.TwoFactorEnabled)
                                {
                                    <span class="badge bg-info text-dark">включена</span>
                                }
                                else
                                {

                                    <span class="badge bg-secondary">выключена</span>
                                }
                            </dd> *@
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <h5 class="mb-3">Логины</h5>
                        <dl class="row mb-0">
                            <dt class="col-5 col-sm-4">Последний вход</dt>
                            <dd class="col-7 col-sm-8">@LastLoginDisplay</dd>

                            <dt class="col-5 col-sm-4">Доступы</dt>
                            <dd class="col-7 col-sm-8">
                                @if (roles?.Any() == true)
                                {
                                    @string.Join(", ", roles!)
                                }
                                else
                                {

                                    <span class="text-muted">Нет ролей</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

            </div>
        </div>

        <div class="mt-3">
            <a class="btn btn-outline-secondary" href="/">Назад</a>
        </div>
    </div>
}

@code {
    [Parameter] public string Id { get; set; } = default!;

    private QazaqGeoReports.Domain.Entities.User? user;
    private bool isLoading = true;
    private string AvatarSrc = "data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=";
    private IList<string>? roles;
    private string LastLoginDisplay = "—";

    protected override async Task OnParametersSetAsync()
    {
        isLoading = true;

        user = await UserManager.FindByIdAsync(Id);

        if (user is not null)
        {
            roles = (await UserManager.GetRolesAsync(user))?.ToList();

            var initialsSeed = string.IsNullOrWhiteSpace(user.FullName)
                ? (user.Email ?? user.UserName ?? "U")
                : user.FullName;

            AvatarSrc = $"https://api.dicebear.com/7.x/initials/svg?seed={Uri.EscapeDataString(initialsSeed)}";

            LastLoginDisplay = "—";
        }

        isLoading = false;
    }

    private void GoBack() => Nav.NavigateTo("/");

    private static string DisplayName(QazaqGeoReports.Domain.Entities.User u)
        => string.IsNullOrWhiteSpace(u.FullName) ? (u.UserName ?? u.Email ?? "Пользователь") : u.FullName;

    private static string RoleBadge(string role) => role switch
    {
        "Admin" => "badge bg-danger",
        "Supervisor" => "badge bg-primary",
        "General" => "badge bg-info text-dark",
        "Driver" => "badge bg-warning text-dark",
        "Worker" => "badge bg-secondary",
        _ => "badge bg-light text-dark"
    };

    private static string FormatDateSafe(DateTime dt)
    {
        // Безопасно приводим Kind и показываем локально
        if (dt.Kind == DateTimeKind.Unspecified)
            dt = DateTime.SpecifyKind(dt, DateTimeKind.Utc);

        var local = dt.Kind == DateTimeKind.Utc ? dt.ToLocalTime() : dt;
        return local.ToString("dd.MM.yyyy HH:mm");
    }

    private static string FormatDate(DateTime dtUtc)
        => DateTime.SpecifyKind(dtUtc, DateTimeKind.Utc).ToLocalTime().ToString("dd.MM.yyyy HH:mm");
}
